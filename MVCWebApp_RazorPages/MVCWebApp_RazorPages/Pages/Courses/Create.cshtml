@page "{subjectId?}"
@model MVCWebApp_RazorPages.Pages.Courses.CreateModel
@using MVCWebApp_RazorPages.Models
@using MVCWebApp_RazorPages.Services

@{
    ViewData["Title"] = "Create Course";
}

<h1>Create New Course</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Course.Title">Title</label>
        <input asp-for="Course.Title" class="form-control" />
        <span asp-validation-for="Course.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.StartDate">Start Date</label>
        <input asp-for="Course.StartDate" class="form-control" type="date" />
        <span asp-validation-for="Course.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.SubjectId">Subject</label>
        <select asp-for="Course.SubjectId" class="form-control">
            <option value="">Select a subject</option>
            @foreach (var subject in Model.Subjects) // Sử dụng Model.Subjects
            {
                <option value="@subject.Id">@subject.Name</option>
            }
        </select>
        <span asp-validation-for="Course.SubjectId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="/Courses/Index" asp-route-subjectId="@ViewData["CurSubjectId"]" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}