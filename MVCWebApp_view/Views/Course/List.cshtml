@using MVCWebApp_View.Models
@using MVCWebApp_View.Models

@* chi dan cho biet Model co kieu la List<Course> *@
@model List<Course> 

<div>
    <div>
        <h1>List of subjects:</h1>
        @foreach(Subject subject in ViewBag.Subjects!)
        {
            <div>
                <a href="/Course/List/@(subject.Id)">@subject.Name</a>
            </div>
        }
    </div>
    <h1>List of Course</h1>
    <!-- @Model: List<Course> -->
    <h2>Number of Course: @Model.Count </h2>
    @if(Model.Count > 0)
    {
        <table>
            <tr>
                <th>CourseID</th>
                <th>Title</th>
                <th>StartDate</th>
                <th>SubjectName</th>
                <th>NumberOfSlot</th>
            </tr>
            @foreach(Course c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td><a href="/Course/Detail/@c.Id"> @c.Title</a></td>
                    <td>@c.StartDate</td>
                    <td>@c.Subject.Name</td>
                    <td>@c.Subject.NumberOfSlot</td>
                </tr>
            }
        </table>
    }
</div>