@using MVCWebApp_CRUD.Models

@model Course

<div>
    @if (Model == null)
    {
        <h1>@ViewData["ErrMess"]</h1>
    }
    else
    {
        <form action="/Course/DoEdit" method="post">
            <div>
                <input type="hidden" name="Id" value="@Model.Id" />
            </div>
            <div>
                Title: <input type="text" name="Title" value="@Model.Title" />
            </div>
            <div>
                StartDate: <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
            </div>
            <div>
                EndDate: <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
            </div>
            <div>
                Subject:
                <select name="SubjectId">
                    @foreach (Subject subject in ViewBag.Subjects)
                    {
                        <option value="@subject.Id" @(subject.Id == Model.SubjectId ? "selected" : "")>
                            @subject.Name
                        </option>
                    }
                </select>
            </div>
            <div>
                <input type="submit" value="update Course" />
            </div>
        </form>
    }
</div>